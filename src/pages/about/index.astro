---
import Layout from "@/app/layouts/Layout.astro";
import Animation from "@/app/components/Animation.astro";
import { getCollection } from "astro:content";
import Section from "@/components/about/Section.astro";
import TimelineItem from "@/components/about/TimelineItem.astro";
import ProjectList from "@/components/project/ProjectList.astro";
import { Tag } from "@/components/common/Tag";

const records = await getCollection("projects");
---

<Layout
  title="About | jtfox.dev"
  description="Introducing ChaeJune Lim's career, project experience, and tech stack. Learn about my growth journey as a developer and the values I pursue."
>
  <Animation>
    <div class="space-y-12">
      <Section id="experience" title="Experience">
        <div class="space-y-4">
          <TimelineItem
            title="Saige"
            subtitle="Frontend Developer | 2021-Present"
            startDate={new Date("2021-01-01")}
            endDate={new Date()}
            description="Developing and maintaining AI-powered applications, focusing on user experience and performance optimization"
          />
          <TimelineItem
            title="Previous Company"
            subtitle="Senior Developer | 2018-2021"
            startDate={new Date("2018-01-01")}
            endDate={new Date("2021-12-31")}
            description="Led development team in creating enterprise web solutions and improving application architecture"
          />
          <TimelineItem
            title="Startup Inc."
            subtitle="Junior Developer | 2016-2018"
            startDate={new Date("2016-01-01")}
            endDate={new Date("2018-12-31")}
            description="Developed frontend components and implemented responsive designs for web applications"
          />
        </div>
      </Section>

      <Section id="projects" title="Projects">
        <ProjectList projects={records} />
      </Section>

      <Section id="github" title="Presentation">
        <div class="bg-gray-100 dark:bg-gray-800 p-4 rounded-lg">
          <h3 class="text-xl font-semibold mb-3">GitHub Contributions</h3>
          <p class="mb-2">
            Over 500+ contributions in the last year, focusing on open-source
            projects in the React and TypeScript ecosystem.
          </p>
          <div class="flex flex-wrap gap-2 mt-3">
            {
              ["React", "TypeScript", "Next.js", "Open Source"].map((tech) => (
                <Tag>{tech}</Tag>
              ))
            }
          </div>
          <a
            href="https://github.com/LimChaeJune"
            class="inline-block mt-4 text-blue-400 hover:underline"
            target="_blank"
            rel="noopener noreferrer">View Contributions â†’</a
          >
        </div>
      </Section>

      <Section id="education" title="Education & Certifications">
        <div class="space-y-4">
          <TimelineItem
            title="University Name"
            subtitle="Major | Graduation Year"
            startDate={new Date("2016-01-01")}
            endDate={new Date("2020-12-31")}
          />
          <TimelineItem
            title="Another University"
            subtitle="Computer Science"
            startDate={new Date("2016-01-01")}
            endDate={new Date("2020-12-31")}
          />

          <div class="mt-6">
            <h3 class="text-xl font-semibold">Certifications</h3>
            <ul class="list-disc list-inside mt-2">
              <li>AWS Certified Solutions Architect (2022)</li>
              <li>Google Cloud Professional Developer (2021)</li>
              <li>Microsoft Certified: Azure Developer Associate (2020)</li>
            </ul>
          </div>

          <div class="mt-6">
            <h3 class="text-xl font-semibold">Certifications</h3>
            <ul class="list-disc list-inside mt-2">
              <li>AWS Certified Solutions Architect (2022)</li>
              <li>Google Cloud Professional Developer (2021)</li>
              <li>Microsoft Certified: Azure Developer Associate (2020)</li>
            </ul>
          </div>
        </div>
      </Section>
    </div>
  </Animation>
</Layout>
