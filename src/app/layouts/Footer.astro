---
import {
  FaSolidRss,
  FaBrandsLinkedinIn,
  FaBrandsGithubAlt,
} from "solid-icons/fa";

const today = new Date();
---

<footer class="border-t mt-12 py-8">
  <div class="max-w-3xl mx-auto px-4">
    <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
      <span
        class="text-sm text-gray-500 dark:text-gray-400 text-center sm:text-left"
      >
        &copy; {today.getFullYear()} ChaeJune Lim. All rights reserved.
      </span>
      <div class="flex justify-center gap-4">
        <a
          href="/rss.xml"
          target="_blank"
          class="transition-transform hover:rotate-6"
          aria-label="RSS 피드 구독"
        >
          <FaSolidRss size={32} class="text-gray-800 dark:text-gray-200" />
        </a>
        <a
          href="https://www.linkedin.com/in/%EC%B1%84%EC%A4%80-%EC%9E%84-2b857420b/"
          target="_blank"
          class="transition-transform hover:rotate-6"
          aria-label="Follow on Linkedin"
        >
          <FaBrandsLinkedinIn
            size={32}
            class="text-gray-800 dark:text-gray-200"
          />
        </a>
        <a
          href="https://github.com/LimChaeJune"
          target="_blank"
          class="transition-transform hover:rotate-6"
          aria-label="Go to GitHub repo"
        >
          <FaBrandsGithubAlt
            size={32}
            class="text-gray-800 dark:text-gray-200"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
