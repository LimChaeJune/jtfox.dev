---
interface Props {
  delay?: number;
}

const { delay = 0 } = Astro.props;
---

<div
  class="opacity-0"
  style={`animation: fadeInUp 0.5s ease forwards; animation-delay: ${delay}s;`}
>
  <slot />
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
